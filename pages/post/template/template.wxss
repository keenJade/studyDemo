.goods_list_box{
  display: flex;
  flex-wrap: wrap;
  width:100vw;
}
.goods_list_box .list_li {
  width:46%;
  border-radius: 10px;
  background:#fff;
  margin:2%;
 
}
.goods_list_box .list_li .li_pro_img{
  width: 346rpx;
	height: 346rpx;
	background-color: #ef7aaf;
	border-radius: 10rpx 10rpx 0rpx 0rpx;
}
.list_li_info{
   padding:4% 3%;
}
.list_li_info .text{
   display: block;
    width:100%;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 28rpx;
    color: #333333;
    margin-bottom:1%;
}
.one_price{
  align-items: baseline;
}
.list_li_info .add-card image{
  width: 36rpx;
	height: 36rpx;
  border-radius: 50%;
	background-color: #ef7aaf;
	border: solid 3px #ef7aaf;
}

/* 按钮 */
button:is([size='lang']) {
   width:690rpx;
}
 .goToLook{
  margin-top:20rpx;
  color:#fff;
  background-color: #ef7aaf;
}
.max-click-btn{
   margin-top:20rpx;
   margin-bottom:20rpx;
   color:#fff;
  background-color: #ef7aaf;
}