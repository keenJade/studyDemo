<!-- 商品列表模板 -->
<template name="goodsListMobel">
  <view class="goods_list_box">
    <block wx:for="{{goodsInfo}}" wx:key="goodsInfo_id">
      <view class="list_li">
        <image class="li_pro_img" src=""></image>
        <view class="list_li_info">
          <text class="text">雪花顺行柔和洁面保湿泡沫洗面奶200ml</text>
          <view class="flex_spa_btw">
            <view class="flex one_price">
              <view class="flex color_e7">
                <text>￥</text>
                <text>982</text>
                <text>.00</text>
              </view>
              <view class="fs24 color_9">￥999.00</view>
            </view>
            <view class="add-card" bindtap="handleAddCard" >
              <image></image>
            </view>
          </view>
        </view>
      </view>
    </block>
  </view>
</template>

<!-- 点击按钮 -->
<template name="minClickBtns">
     <view class="page__bd page__bd_spacing" bindtap="handleGoToLook">
        <button class="weui-btn goToLook">去逛逛</button>
    </view>
</template>
<template name="maxClickBtns">
    <view class="page__bd page__bd_spacing">
        <button class="weui-btn max-click-btn" size='lang' >{{btnText}}</button>
    </view>
</template>
<template name="twoBtns">
 <view class="button-sp-area">
            <button class="weui-btn mini-btn" type="primary" size="mini">按钮</button>
            <button class="weui-btn mini-btn" type="default" size="mini">按钮</button>
        </view>
</template>