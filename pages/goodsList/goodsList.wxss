/* pages/goodsList/goodsList.wxss */
.goodsList {
  position: relative;
  width: 100vw;
  height: 100%;
}
.nav-left {
  display: inline-block;
  width: 25%;
  height: 100%;
  background-color: #f5f5f5;
  text-align: center;
}
.nav-left .nav-left-item {
  font-size: 12px;
  height: 45px;
  line-height: 45px;
  border-bottom: 1px solid #ddd;
  background-color: #fff;
}
.active {
  background-color: aquamarine;
  font-weight: 700;
  color: #ef7aaf;
}
.nav-right {
  position: absolute;
  top: 0;
  right: 0;
  flex: 1;
  width: 75%;
  height: auto;
  padding: 10px;
  background-color: #fff;
  box-sizing: border-box;
}
.nav-right .nav-right-item {
  float: left;
  width: 33.3%;
  text-align: center;
}
.nav-right .nav-right-item image {
  width: 80px;
  height: 80px;
  margin: 10px 0;
}
.nav-right .nav-right-itemtext {
  display: block;
  font-size: 14px;
  color: #333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.nodata-text {
  color: black;
  font-size: 14px;
  text-align: center;
}
